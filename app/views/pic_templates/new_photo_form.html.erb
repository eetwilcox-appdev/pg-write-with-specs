<h1>Add a new photo</h1>

<form action="/create_photo_record">
    <label for="image_input">Image URL</label>
    <input id="image_input" type="text" name="pic_image">
    
    <label for="caption_box">Caption</label>
    <textarea id="caption_box" name="pic_caption"></textarea>
    
    <label for="user_dropdown">Owner</label>
    <select id="user_dropdown" name="poster_id">
        <% User.all.order({ :username => :asc }).each do |a_user| %>
            <option value="<%= a_user.id %>">
            <%= a_user.username %>
            </option>
        <% end %>
    </select>
    
    <button>Add photo</button>
    
</form>